<%- include("../components/layout/header" , {includeHeader : false }) %>

<div class="container main">
  <h1>Dashboard</h1>
  <hr />

  <div class="row mx-auto">
    <% for (let khatabook of khatabooks ) { %>
    <div class="col-3 mx-auto">
      <div class="card rounded mt-4">
        <div class="card-body">
          <h5 class="card-title"><%= khatabook.title%></h5>
          <hr />
          <p class="card-text">
            Customers : <b><%= khatabook.customerCount %></b> <br />

            <% if (khatabook.youWillGet) { %>
            <!--  -->
            <span class="text-danger"
              >You Will Get : <b><%= khatabook.youWillGet %></b> <br
            /></span>
            <% } if(khatabook.youWillGive) { %>
            <!--  -->
            <span class="text-success"
              >You Will Give : <b><%= khatabook.youWillGive %></b> <br
            /></span>
            <% } %>
          </p>
          <!-- <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a> -->
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<%- include("../components/layout/footer") %>
