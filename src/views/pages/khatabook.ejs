<%- include("../components/layout/header") %>

<div class="container main">
  <!-- row -->
  <div class="row">
    <!-- col -->
    <div class="col border rounded m-2">
      <div>
        <div class="mt-3">
          <h1>Khatabooks</h1>
          <hr />
        </div>
        <div>
          <table class="table">
            <thead>
              <tr>
                <th>Sno.</th>
                <th>Title</th>
                <th>Actions</th>
              </tr>
            </thead>

            <tbody>
              <% for (let index = 0 ; index < khatabooks.length ; index ++) {%>
              <tr>
                <td><%= index+1 %></td>
                <td><%= khatabooks[index].title %></td>
                <td>
                  <form action="/khatabook/delete/" method="post">
                    <input
                      type="hidden"
                      name="khatabook"
                      value="<%= khatabooks[index].id %>"
                    />
                    <input
                      type="submit"
                      class="btn btn-danger btn-sm"
                      value="Delele"
                    />
                  </form>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <!-- col -->
    <div class="col border rounded m-2">
      <div>
        <div class="mt-3">
          <h1>Create New</h1>
          <hr />
        </div>

        <% if (locals.successMessage){ %>
        <p class="alert alert-success"><%= locals.successMessage %></p>
        <% } %>

        <form method="post" class="m-4">
          <div class="form-group mt-3">
            <label class="form-label" for="">Khatabook name</label>
            <input
              type="text"
              name="title"
              id="title"
              class="form-control"
              placeholder="Enter Khatabook Name"
            />
          </div>

          <div class="form-group mt-3">
            <input class="btn btn-success" type="submit" value="Create" />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("../components/layout/footer") %>
